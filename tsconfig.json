{
  "compilerOptions": {
    "outDir": "./lib",
    "lib": ["es2015", "es2016", "es2017", "es2018", "esnext"],
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*", "**/*.test.*"]
}
